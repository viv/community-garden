{
  "name": "community-garden-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Community Garden Management System Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:frontend": "vite",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "vite build",
    "build:backend": "node --check src/server.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "community",
    "garden",
    "management",
    "api",
    "express"
  ],
  "author": "Community Garden Team",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.83.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "framer-motion": "^12.23.7",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "localforage": "^1.10.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.0",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "zod": "^4.0.8"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
